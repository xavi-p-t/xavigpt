<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.Controller">

    <children>

        <!-- Ãrea de mensajes -->
        <ScrollPane fx:id="scrollPane"
                    layoutX="14.0" layoutY="14.0"
                    prefHeight="330.0" prefWidth="433.0"
                    fitToWidth="true"
                    style="-fx-border-color: black; -fx-border-radius: 5px;">
            <content>
                <VBox fx:id="chatBox"
                      spacing="10"
                      prefWidth="420.0"
                      style="-fx-padding: 10;" />
            </content>
        </ScrollPane>

        <!-- Input -->
        <HBox layoutX="14.0" layoutY="350.0"
              prefHeight="32.0" prefWidth="433.0"
              spacing="5"
              style="-fx-border-color: grey; -fx-border-radius: 5px; -fx-padding: 5;">
            <children>

                <!-- ðŸ“Ž Subir imagen -->
                <Button fx:id="clip"
                        onAction="#callPicture"
                        style="-fx-background-color: transparent;"
                        text="ðŸ“Ž" />

                <TextField fx:id="textfi"
                           promptText="Message XaviGPT"
                           prefHeight="25.0"
                           style="-fx-background-color: transparent;">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </TextField>

                <!-- âž¤ Enviar mensaje -->
                <Button fx:id="send"
                        onAction="#callStream"
                        prefHeight="25.0" prefWidth="41.0"
                        style="-fx-background-color: transparent;"
                        text="âž¤">
                    <font>
                        <Font name="Arial" size="14.0" />
                    </font>
                </Button>

            </children>
        </HBox>

        <!-- Botones laterales -->
        <Button fx:id="submit"
                layoutX="489.0" layoutY="23.0"
                onAction="#callStream"
                prefHeight="29.0" prefWidth="79.0"
                style="-fx-background-color: transparent; -fx-border-color: grey; -fx-border-radius: 5px;"
                text="Submit" />

        <Button fx:id="cancel"
                layoutX="489.0" layoutY="66.0"
                onAction="#callBreak"
                prefHeight="29.0" prefWidth="79.0"
                style="-fx-background-color: transparent; -fx-border-color: grey; -fx-border-radius: 5px;"
                text="Cancel" />

        <Button fx:id="limpiar"
                layoutX="489.0" layoutY="112.0"
                onAction="#clearChat"
                prefHeight="29.0" prefWidth="79.0"
                style="-fx-background-color: transparent; -fx-border-color: grey; -fx-border-radius: 5px;"
                text="Clear" />

    </children>
</AnchorPane>
